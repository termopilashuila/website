{
  "project": {
    "name": "Finca Termópilas Website",
    "description": "Website for Finca Termópilas, a lodging business in Rivera, Huila, Colombia"
  },
  "structure": {
    "html": {
      "files": ["index.html", "rooms.html", "404.html", "tour-vino-cacao.html", "locate.html"],
      "location": "root directory"
    },
    "css": {
      "files": [
        "styles/main.css",
        "styles/hero.css",
        "styles/rooms.css",
        "styles/tour.css",
        "styles/pwa-prompt.css",
        "styles/utilities.css",
        "styles/sections.css",
        "assets/css/fonts.css"
      ]
    },
    "typescript": {
      "files": ["src/ts/main.ts"],
      "output": "dist/main.js"
    },
    "images": {
      "directories": [
        "assets/images/",
        "assets/images/home/",
        "assets/images/rooms/",
        "assets/images/tour/",
        "assets/images/error/"
      ]
    },
    "icons": {
      "directory": "assets/icons/"
    },
    "documentation": {
      "files": ["cursor-rules.md", ".cursorrules"]
    }
  },
  "naming": {
    "convention": "kebab-case",
    "images": "section-based (e.g., section0-hero.jpg, section1-accommodation1.jpg)"
  },
  "version_control": {
    "branching": {
      "main": "stable, production-ready code",
      "feature_branches": "prefix with feature/, fix/, update/"
    },
    "workflow": [
      "Create branch from main",
      "Make changes",
      "Commit with clear messages",
      "Push branch",
      "Create pull request",
      "Review and merge"
    ],
    "commit_messages": {
      "format": "Present tense verb + description",
      "examples": ["Add booking system", "Fix mobile navigation", "Update hero images"]
    }
  },
  "html": {
    "common_elements": [
      "Skip link for accessibility",
      "Header with navigation (dynamically generated by TypeScript)",
      "Main content area",
      "Footer with contact information",
      "PWA install prompt"
    ],
    "header_structure": {
      "template": "<!-- Header will be dynamically generated by TypeScript -->\n<header class=\"hero\">\n    <!-- Content will be injected by TypeScript -->\n</header>",
      "classes": ["hero", "hero rooms-hero", "hero tour-hero", "hero directions-hero"]
    },
    "navigation": {
      "source": "TypeScript configuration",
      "active_page": "Automatically determined based on URL"
    },
    "sections": {
      "elements": ["header", "main", "section", "footer"],
      "attributes": {
        "id": "For navigation targets",
        "tabindex": "-1 for skip link targets"
      }
    }
  },
  "typescript": {
    "header_config": {
      "interface": "HeaderConfig",
      "properties": [
        "logoText: string",
        "logoIcon: string",
        "navItems: Array<{text: string, href: string, isActive?: boolean}>",
        "heroContent?: {title: string, subtitle: string, ctaText: string, ctaHref: string}",
        "heroClass?: string"
      ],
      "customization": "Update initHeader() function for page-specific configurations"
    },
    "global_object": {
      "name": "window.termopilasHeader",
      "methods": [
        "updateConfig(config): Updates header with provided configuration",
        "regenerateHeader(): Regenerates header with default configuration"
      ]
    }
  },
  "css": {
    "organization": {
      "approach": "Separate by functionality",
      "import": "In HTML head section",
      "styling": "Class-based, no inline styles"
    },
    "colors": {
      "primary": "#000000",
      "secondary": "#333333",
      "accent": "#ff8c00",
      "text": "#333333",
      "light_text": "#fdf6ea",
      "background_light": "#fdf6ea",
      "background_dark": "#000000",
      "background_cream": "#fdf6ea",
      "background_warm": "#F9F9F9"
    },
    "typography": {
      "heading_font": "Lora (serif)",
      "body_font": "Montserrat (sans-serif)",
      "weights": {
        "headings": "600-700",
        "body": "300-500",
        "buttons": "600"
      },
      "sizes": {
        "h1": "5.3rem (85px)",
        "h2": "3.5rem (56px)",
        "h3": "1.8rem (29px)",
        "h4": "1.25rem (20px)",
        "body": "1rem (16px)",
        "small": "0.875rem (14px)"
      }
    },
    "components": {
      "hero": {
        "structure": "Full-height background image with overlay",
        "content": "Centered with heading, subheading, and CTA button",
        "overlay": "Gradient with specific opacity values"
      },
      "product_cards": {
        "sizing": "300px width on desktop",
        "colors": "Black background with #fdf6ea text, orange accents"
      },
      "room_cards": {
        "sizing": "300px width on desktop",
        "colors": "Black background with #fdf6ea text, orange accents",
        "badges": "De Lujo badge for luxury rooms"
      },
      "tour_timeline": {
        "structure": "Vertical timeline with orange accent line",
        "icons": "Circular with orange background"
      },
      "testimonials": {
        "container": "Horizontal scrolling on all devices",
        "cards": "Light background with testimonial-card class",
        "author_images": "Circular thumbnails with testimonial-author-img class"
      }
    }
  },
  "build": {
    "typescript": {
      "command": "npm run build",
      "output": "dist/main.js",
      "development": "npm run dev for automatic recompilation"
    }
  },
  "deployment": {
    "platform": "GitHub Pages",
    "branch": "main (automatically deployed)",
    "checklist": [
      "Ensure all files are properly committed and pushed",
      "Check that all links and assets work correctly"
    ]
  }
} 