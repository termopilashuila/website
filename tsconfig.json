{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom", "webworker"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/ts/components/*"],
      "@utils/*": ["src/ts/utils/*"],
      "@types/*": ["src/ts/types/*"],
      "@/*": ["src/ts/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 